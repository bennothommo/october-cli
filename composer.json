{
    "name": "winter/cli",
    "description": "A command-line helper tool for managing Winter CMS installations.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Ben Thomson",
            "email": "git@alfreido.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "symfony/console": "^4.4.13",
        "php-http/guzzle6-adapter": "^2.0",
        "knplabs/github-api": "^2.15"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Winter\\Cli\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "composer bin box require --dev --no-progress --no-suggest humbug/box"
        ],
        "post-update-cmd": [
            "composer bin box require --dev --no-progress --no-suggest humbug/box"
        ]
    }
}
